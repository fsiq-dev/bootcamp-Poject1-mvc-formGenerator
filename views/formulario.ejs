<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Mystery Shack - Formulario</title>
</head>
<body>
    <header>
        <div class="top">
            <div id="textTop"><span>Mystery Shack</span></div>
        </div>
        <div class="logo-box"><img class="logo" src="/css/src/logo.png" alt="logo">
        <div class="menu">
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="formulario">Formulario</a></li>
                    <li><a href="sobre">Sobre</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <main>
        <div class="box-form">
                <form id="form" action="/formulario" method="POST">
                    <fieldset class="test"><legend>Informações Pessoais</legend>
                        <div class="formGroup">
                            <label for="name">Nome:</label>
                            <input value="Felipe" type="text" name="name" placeholder="Nome Sobrenome" required>
                        </div>
                        <div class="formGroup">
                            <label for="email">E-mail:</label>
                            <input value="user@email.com" type="email" name="email" placeholder="email@email.com" required>
                        </div>
                        <div class="formGroup">
                            <label for="cpf">Cpf:</label>
                            <input value="143.241.234-19" type="text" name="cpf" placeholder="000.000.00-00" required>
                        </div>
                        <div class="formGroup">
                            <label for="phone">Telefone:</label>
                            <input value="2499832423" type="tel" placeholder="(DDD)12345-6789" name="phone">
                        </div>
                    </fieldset>
                    <fieldset class="test"><legend>Produto</legend>
                        <div class="formGroup">
                            <label for="type">Tipo do Produto:</label>
                            <input type="radio" name="type" value="new">Novo
                            <input type="radio" name="type" value="used" checked>Usado
                        </div>
                        <div class="formGroup">
                            <label for="category">Categoria:</label>
                            <select name="category">
                                <option value="default" disabled selected>Escolher</option>
                                <% category.map((item) => { %>
                                <option value="<%= item.value %>"> <%= item.options %> </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="formGroup">
                            <label for="textarea">Agora,conte seu problema:</label>
                            <textarea id="textarea" name="textarea" required>description</textarea>
                        </div>
                        <div class="formGroup">
                            <input id="file" type="file" name="file" accept="image/*">
                        </div>
                    </fieldset>
                    <div>
                        <button type="submit">enviar</button>
                    </div>
                </form>
        </div>
    </main>
    <footer>
        <p>©Bootcamp Infnet-2021 by:Felipe Siqueira</p>
    </footer>
</body>
