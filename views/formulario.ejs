<!-- base64 -preview img -->
<script>
$(function(){
    $('#upload').change(function(){
        const file = $(this)[0].files[0];
        const fileReader= new FileReader;
        fileReader.onloadend = function(){
            $('#preview').attr('src', fileReader.result)
            // console.log(fileReader.result)
        }
        fileReader.readAsDataURL(file)
    })
})

